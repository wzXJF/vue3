# https://editorconfig.org  代码风格配置文件 需要安装vscode插件--> EditorConfig for VS Code

root = true # 表示文件配置在根文件下

[*] # 表示所有文件通用
charset = utf-8 # 设置文件字符为 utf-8
indent_style = space # 缩进风格 (tab | space)
indent_size = 2 # 缩进大小
end_of_line = lf # 控制换行类型(lf | cr | crlf)
insert_final_newline = true # 去除行首的任何空白
trim_trailing_whitespace = true # 始终在文件末尾插入一个新行

[*.md] # 表示仅 md 文件适用一下规则
max_line_length = off
# insert_final_newline = false
trim_trailing_whitespace = false
